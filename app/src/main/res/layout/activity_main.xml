<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="cs4720.cs.virginia.edu.analyticsexample.MainActivity">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Which feature is the best?"
        android:id="@+id/textView"/>

    <Button
        android:text="Feature 2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/feature1"
        android:layout_alignParentStart="true"
        android:layout_marginTop="14dp"
        android:id="@+id/feature2"
        android:onClick="selectFeature2"/>

    <Button
        android:text="Feature 3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/feature2"
        android:layout_alignParentStart="true"
        android:layout_marginTop="14dp"
        android:id="@+id/feature3"
        android:onClick="selectFeature3"/>

    <Button
        android:text="Feature 4"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/feature3"
        android:layout_alignParentStart="true"
        android:layout_marginTop="13dp"
        android:id="@+id/feature4"
        android:onClick="selectFeature4"/>

    <Button
        android:text="Feature 1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/feature1"
        android:layout_marginTop="26dp"
        android:layout_below="@+id/textView"
        android:layout_alignParentStart="true"
        android:onClick="selectFeature1"/>
</RelativeLayout>
